<!-- portfolio_list.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Portfolio Items List</title>
</head>
<body>
  <h1>Portfolio Items List</h1>
  <ul>
    <% for (let i = 0; i < items.length; i++) { %>
      <li>
        <h2><%= items[i].name %></h2>
        <p><%= items[i].description %></p>
        <a href="/view/<%= i %>">View</a>
        <a href="/edit/<%= i %>">Edit</a>
        <a href="/delete/<%= i %>">Delete</a>
      </li>
    <% } %>
  </ul>
  <a href="/add">Add New Item</a>
</body>